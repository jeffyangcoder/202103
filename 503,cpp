class Solution {
public:
    vector<int> nextGreaterElements(vector<int>& nums) {
        int n = nums.size();
        vector<int> ret(n, -1);

        stack<int> res;
        
        for (int i = 0; i < n * 2 - 1; i++) {
            while (!res.empty() && nums[res.top()] < nums[i % n]) {
                ret[res.top()] = nums[i % n];
                res.pop();
            }
            res.push(i % n);
        }
        return ret;
    }
};
